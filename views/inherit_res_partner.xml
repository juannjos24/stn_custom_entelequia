<odoo>
    <!-- Heredar la vista existente de res.partner.form -->
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>  <!-- Aquí heredamos la vista existente -->
        <field name="arch" type="xml">
            <!-- Usamos xpath para insertar el campo 'id_sistema_compartido' después de 'category_id' -->
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="id_secondary" string="ID Secundario"/>
            </xpath>
        </field>
    </record>
</odoo>
